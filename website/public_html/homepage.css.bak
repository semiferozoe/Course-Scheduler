body, html {
  height: 100%;
  margin: 0;
  font: 400 15px/1.8 "Lato", sans-serif;
  color: #777;
}

.bgimg-0 {
	position: relative;
	opacity: 0.95;
	/*background-attachment: fixed;*/
	background-position: center;
	background-repeat: no-repeat;
	background-size: 250px;
}

.bgimg-1, .bgimg-2, .bgimg-3 {
  position: relative;
  opacity: 0.89;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;

}

.bgimg-0 {
  background-image: url("https://github.com/semiferozoe/Course-Scheduler/blob/main/website/public_html/images/logo.png?raw=true");
  min-height: 600px;
}

.bgimg-1 {
  background-image: url("https://github.com/semiferozoe/Course-Scheduler/blob/main/website/public_html/images/test1.jpg?raw=true");
  min-height: 600px;
}

.bgimg-2 {
  background-image: url("https://github.com/semiferozoe/Course-Scheduler/blob/main/website/public_html/images/test2.jpg?raw=true");
  min-height: 500px;
}

.bgimg-3 {
  background-image: url("https://github.com/semiferozoe/Course-Scheduler/blob/main/website/public_html/images/campus.jpg?raw=true");
  min-height: 500px;
}

.caption {
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  text-align: center;
  color: #000;
}

.caption span.border {
  background-color: #111;
  color: #fff;
  padding: 18px;
  font-size: 25px;
  letter-spacing: 10px;
}

h3 {
  letter-spacing: 5px;
  text-transform: uppercase;
  font: 20px "Lato", sans-serif;
  color: #111;
}

/* Turn off parallax scrolling for tablets and phones */
@media only screen and (max-device-width: 1024px) {
  .bgimg-1, .bgimg-2, .bgimg-3 {
    background-attachment: scroll;
  }
}

.header {
  overflow: hidden;
  background-color: lightgray;
  opacity: 0.85;
  padding: 15px 10px;
}

.header a {
  float: left;
  color: black;
  text-align: center;
  padding: 20px;
  text-decoration: none;
  font-size: 18px; 
  line-height: 25px;
  border-radius: 4px;
}

.header a.logo {
  font-size: 25px;
  font-weight: bold;
}

.header a:hover {
  background-color: #ddd;
  color: black;
}

.header a.active {
  background-color: #d2202f;
  color: white;
}

.header-right {
	float: right;
}

/* Makes right header go under title. Make this three lines to expand instead */
@media screen and (max-width: 1075px) {
  .header a {
	color: black;
    float: none;
    display: block;
    text-align: left;
  }
  
  .header-right {
    float: none;
  }
}


